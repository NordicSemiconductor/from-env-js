{
  "name": "@nordicsemiconductor/from-env",
  "version": "0.0.0-development",
  "description": "Helper function which ensures that required environment variables are set.",
  "type": "module",
  "typings": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "node": "./dist/index.js"
  },
  "scripts": {
    "test": "npx tsx --test ./src/*.spec.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/from-env-js.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/from-env-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/from-env-js#readme",
  "keywords": [
    "nrf-asset-tracker",
    "iot"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@commitlint/config-conventional": "18.6.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "13.1.12",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "50.0.1",
    "husky": "9.0.7"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc"
}
